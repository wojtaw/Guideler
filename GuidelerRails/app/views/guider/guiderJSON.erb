{"guiderID":<%= guider.id %>, "guiderName":"<%= guider.name %>","guiderDescription":"<%= guider.description %>", "steps":[
<% guider.steps.each_with_index do |step, index|  %>
    {
        "id":<%= step.step_order %>,
        "serviceType":"<%= serviceType[index] %>",
        "externalData":"<%= externalData[index] %>",
        "question":"<%= step.question %>",
        "correctAnswer":"<%= step.correct_answer %>",
        "questionEnabled":"<%= step.question_enabled %>",
        "answers":
        [
        {"answer1":"<%= step.answer1 %>"},
        {"answer2":"<%= step.answer2 %>"},
        {"answer3":"<%= step.answer3 %>"}
        ]
    <% if step == guider.steps.last %>}<% else %>},<% end %>
<% end %>
]
}